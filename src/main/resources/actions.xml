<?xml version="1.0"?>
<!--
Sample Actions xml file.

# Mask Names #
Acceptable names for masks are "alt", "command", "control", "menu", and
"shift".
"menu" means Command on Mac and Control on other platforms.

# Key Names #
Key names must be as given by Swing, without the
  initial "VK_". Full list here:
http://download.oracle.com/javase/6/docs/api/java/awt/event/KeyEvent.html

# Misc #
Capitalization of key/mask names does not matter.
-->
<actions>

  <!-- Actions with keyboard shortcuts -->
  <action class="behaviors.singleact.DoneAction"
          name="Mark Complete"
          tooltip="Mark Annotation File Complete">
    <shortcut>
      <mask keyname="menu" />
      <mask keyname="shift" />
      <key keyname="D" />
    </shortcut>
  </action>
  <action class="behaviors.singleact.ExitAction"
          name="Exit">
    <shortcut>
      <mask keyname="menu" />
      <key keyname="X" />
    </shortcut>
  </action>
  <action class="behaviors.singleact.OpenAudioLocationAction"
          name="Add Audio Files..."
          tooltip="Select File or Folder">
    <shortcut>
      <mask keyname="menu" />
      <key keyname="O" />
    </shortcut>
  </action>
  <action class="behaviors.singleact.PlayPauseAction"
          name="Play/Pause">
    <shortcut>
      <key keyname="space" />
    </shortcut>
  </action>
  <action class="behaviors.singleact.ReplayLast200MillisAction"
          name="Replay Last 200 ms">
    <shortcut>
      <mask keyname="menu" />
      <key keyname="Z" />
    </shortcut>
  </action>
  <action class="behaviors.singleact.StopAction"
          name="Go to Start">
    <shortcut>
      <mask keyname="menu" />
      <key keyname="S" />
    </shortcut>
  </action>
  <action class="behaviors.singleact.ReturnToLastPositionAction"
          name="Undo Play"
          tooltip="Return to the position prior to hitting play">
    <shortcut>
      <mask keyname="menu" />
      <key keyname="L" />
    </shortcut>
  </action>
  <action class="behaviors.singleact.ReplayLastPositionAction"
          name="Replay">
    <shortcut>
      <mask keyname="menu" />
      <key keyname="R" />
    </shortcut>
  </action>

  <action class="behaviors.multiact.SeekAction"
          arg="behaviors.multiact.SeekAction.SeekAmount.FORWARD_SMALL"
          name="Forward Small Amount">
    <shortcut>
      <key keyname="right" />
    </shortcut>
  </action>

  <action class="behaviors.multiact.SeekAction"
          arg="behaviors.multiact.SeekAction.SeekAmount.BACKWARD_SMALL"
          name="Backward Small Amount">
    <shortcut>
      <key keyname="left" />
    </shortcut>
  </action>

  <action class="behaviors.multiact.SeekAction"
          arg="behaviors.multiact.SeekAction.SeekAmount.FORWARD_MEDIUM"
          name="Forward Medium Amount">
    <shortcut>
      <mask keyname="menu" />
      <key keyname="right" />
    </shortcut>
  </action>

  <action class="behaviors.multiact.SeekAction"
          arg="behaviors.multiact.SeekAction.SeekAmount.BACKWARD_MEDIUM"
          name="Backward Medium Amount">
    <shortcut>
      <mask keyname="menu" />
      <key keyname="left" />
    </shortcut>
  </action>

  <action class="behaviors.multiact.SeekAction"
          arg="behaviors.multiact.SeekAction.SeekAmount.FORWARD_LARGE"
          name="Forward Large Amount">
    <shortcut>
      <mask keyname="menu" />
      <mask keyname="shift" />
      <key keyname="right" />
    </shortcut>
  </action>

  <action class="behaviors.multiact.SeekAction"
          arg="behaviors.multiact.SeekAction.SeekAmount.BACKWARD_LARGE"
          name="Backward Large Amount">
    <shortcut>
      <mask keyname="menu" />
      <mask keyname="shift" />
      <key keyname="left" />
    </shortcut>
  </action>

  <action class="behaviors.multiact.ToggleAnnotationsAction"
          arg="behaviors.multiact.ToggleAnnotationsAction.Direction.FORWARD"
          name="Toggle Next Annotation">
    <shortcut>
      <mask keyname="shift" />
      <key keyname="right" />
    </shortcut>
  </action>

  <action class="behaviors.multiact.ToggleAnnotationsAction"
          arg="behaviors.multiact.ToggleAnnotationsAction.Direction.BACKWARD"
          name="Toggle Previous Annotation">
    <shortcut>
      <mask keyname="shift" />
      <key keyname="left" />
    </shortcut>
  </action>

  <action class="behaviors.multiact.ZoomAction"
          arg="behaviors.multiact.ZoomAction.Direction.IN"
          name="Zoom In">
    <shortcut>
      <mask keyname="menu" />
      <key keyname="right" />
    </shortcut>
  </action>

  <action class="behaviors.multiact.ZoomAction"
          arg="behaviors.multiact.ZoomAction.Direction.OUT"
          name="Zoom Out">
    <shortcut>
      <mask keyname="menu" />
      <key keyname="left" />
    </shortcut>
  </action>

  <action class="behaviors.multiact.Last200PlusMoveAction"
          arg="behaviors.multiact.Last200PlusMoveAction.Direction.BACKWARD"
          name="Zoom Out">
    <shortcut>
      <mask keyname="Backward Small Amount then Replay Last 200 ms" />
      <key keyname="left" />
    </shortcut>
  </action>

  <action class="behaviors.multiact.Last200PlusMoveAction"
          arg="behaviors.multiact.Last200PlusMoveAction.Direction.FORWARD"
          name="Zoom In">
    <shortcut>
      <mask keyname="Forward Small Amount then Replay Last 200 ms" />
      <key keyname="right" />
    </shortcut>
  </action>

  <!-- Actions without keyboard shortcuts -->
  <action class="behaviors.singleact.AboutAction"
          name="About" />

  <action class="behaviors.singleact.ContinueAnnotatingAction"
          name="Continue Editing" />

  <action class="behaviors.singleact.CheckUpdatesAction"
          name="Check For Updates" />

  <action class="behaviors.singleact.DeleteAnnotationAction"
          name="Delete Annotation" />

  <action class="behaviors.singleact.OpenWordpoolAction"
          name="Select Wordpool..."
          tooltip="Select Text File Containing Words in Audio File" />

  <action class="behaviors.singleact.PreferencesAction"
          name="Preferences..." />

  <action class="behaviors.singleact.VisitTutorialSiteAction"
          name="Program Homapage" />

  <action class="behaviors.singleact.EditKeyboardShortcutsAction"
          name="Edit Keyboard Shortcuts" />


</actions>
